makeCacheMatrix <- function(x = matrix()) {
        i <- NULL
        set <- function(y) {
                x <<- y
                i <<- NULL
        }
        get <- function() x
        setInv <- function(ierse) i <<- ierse
        getInv <- function() i
        list(set = set,
             get = get,
             setInv = setInv,
             getInv = getInv)
}
cacheSolve <- function(x, ...) {
        i <- x$getInv()
        if (!is.null(i)) {
                message("getting cached data")
                return(i)
        }
        mat <- x$get()
        i <- solve(mat, ...)
        x$setInv(i)
        i
}
matr <- makeCacheMatrix(matrix(1:4, 2, 2))
matr$get()
matr$getInv()
cacheSolve(matr)
cacheSolve(matr)
cacheSolve(matr)
matr$getInv()
matr$set(matrix(c(3,1,2,1,3,4,1,2,1), 3, 3))
matr$get()
matr$getInv()
cacheSolve(matr)
cacheSolve(matr)
matr$set(matrix(c(1,1,4,1), 2, 2))
matr$getInv()
cacheSolve(matr)
cacheSolve(matr)
q()
